<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.higekick.opentsuyama.MainActivity">

    <FrameLayout
        android:id="@+id/lay_detail"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/detail_view"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Title-->
                <TextView
                    android:id="@+id/txt_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="top"
                    android:textSize="16sp" />

                <!--Address-->
                <ImageView
                    android:id="@+id/icon_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_place_name"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_place_red_400_24dp" />
                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBottom="@+id/icon_address"
                    android:layout_toRightOf="@+id/icon_address" />

                <!--TEL-->
                <ImageView
                    android:id="@+id/icon_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_address"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_call_indigo_900_24dp" />
                <TextView
                    android:id="@+id/txt_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBottom="@+id/icon_tel"
                    android:layout_toRightOf="@+id/icon_tel"
                    android:textColorLink="@color/colorAccent"
                    android:autoLink="phone" />

                <!--URL-->
                <ImageView
                    android:id="@+id/icon_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_tel"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_web_amber_900_24dp" />
                <TextView
                    android:id="@+id/txt_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/icon_url"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/icon_url"
                    android:autoLink="web" />

                <!--Memo-->
                <ImageView
                    android:id="@+id/icon_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_url"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_description_blue_grey_500_24dp" />
                <TextView
                    android:id="@+id/txt_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBottom="@+id/icon_memo"
                    android:layout_toRightOf="@+id/icon_memo" />

                <Button
                    android:textAllCaps="false"
                    android:id="@+id/btn_map"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/my_button"
                    android:drawableLeft="@drawable/ic_map_teal_500_24dp"
                    android:text="@string/google_map"
                    android:padding="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"></Button>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabFocusOnTsuyama"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="60dp"
        app:backgroundTint="@android:color/white"
        android:src="@drawable/ic_place_red_400_24dp" />

</RelativeLayout>
